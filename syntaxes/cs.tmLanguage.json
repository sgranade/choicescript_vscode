{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ChoiceScript",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#command"
		},
		{
			"include": "#choice"
		},
		{
			"include": "#todo"
		},
		{
			"include": "#variable-display"
		},
		{
			"include": "#variable-substitution"
		},
		{
			"include": "#multireplace"
		},
		{
			"include": "#operator"
		},
		{
			"include": "#markup"
		}
	],
	"repository": {
		"comment": {
			"name": "comment.line.cs",
			"begin": "^\\s*\\*comment",
			"end": "(?=$)",
			"patterns": [{
				"include": "#todo"
			}]
		},
		"command": {
			"comment": "Any command and its contents",
			"patterns": [
				{
					"include": "#regular-command"
				},
				{
					"include": "#command-with-expression"
				},
				{
					"include": "#command-with-expression-and-optional-choice"
				},
				{
					"include": "#label-creation-command"
				}
			]
		},
		"regular-command": {
			"name": "keyword.control.cs",
			"match": "(?<!\\*)\\*((fake_)?choice|else|(disable|hide|allow)_reuse|goto((_random)?_scene)?|gosub(_scene)?|redirect_scene|return|finish|ending|(page|line|delay)_break|params|title|author|input_(text|number)|reset|restart|image|link|bug|stat_chart|scene_list|achieve(ment)?|check_achievements|script|print|more_games|share_this_game|show_password)\\b"
		},
		"command-with-expression": {
			"begin": "(?<!\\*)(\\*(create|temp|set|delete|elseif|rand)\\b)",
			"end": "(?=$)",
			"beginCaptures": {
				"1": {
					"name": "keyword.control.cs"
				}
			},
			"patterns": [
				{
					"include": "#expression"
				}
			]
		},
		"command-with-expression-and-optional-choice": {
			"begin": "(?<!\\*)(\\*((selectable_)?if)\\b)",
			"end": "(?=$| #)",
			"beginCaptures": {
				"1": {
					"name": "keyword.control.cs"
				}
			},
			"patterns": [
				{
					"include": "#expression"
				}
			]
		},
		"label-creation-command": {
			"match": "(?<!\\*)(\\*label)(\\s*(\\w+))",
			"captures": {
				"1": {
					"name": "keyword.control.cs"
				},
				"3": {
					"name": "entity.name.section"
				}
			}
		},
		"choice": {
			"name": "entity.name.function",
			"begin": "(^|\\s+)#",
			"end": "(?=$)",
			"patterns": [
				{
					"include": "#multireplace"
				},
				{
					"include": "#variable-display"
				},
				{
					"include": "#todo"
				}
			]
		},
		"variable-display": {
			"begin": "\\$!?!?\\{",
			"end": "\\}",
			"beginCaptures": {
				"0": {
					"name": "string.interpolated"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.interpolated"
				}
			},
			"patterns": [{
				"include": "#expression"
			}]
		},
		"variable-substitution": {
			"name": "constant.language.cs",
			"begin": "(?<![$@]|[$@]!|[$@]!!){",
			"end": "\\}",
			"patterns": [{
				"include": "#expression"
			}]
		},
		"multireplace": {
			"begin": "(@!?!?\\{)",
			"end": "(\\})",
			"beginCaptures": {
				"1": {
					"name": "string.interpolated"
				}
			},
			"endCaptures": {
				"1": {
					"name": "string.interpolated"
				}
			},
			"patterns": [
				{
					"name": "variable.other",
					"comment": "Bare variable at start of multireplace",
					"match": "\\G\\s*([A-Za-z]\\w*)"
				},
				{
					"comment": "Expression in parentheses at start of multireplace",
					"begin": "\\G\\s*(\\()",
					"end": "(\\))\\s+",
					"beginCaptures": {
						"1": {
							"name": "variable.language.other"
						}
					},
					"endCaptures": {
						"1": {
							"name": "variable.language.other"
						}
					},
					"patterns": [
						{
							"include": "#expression"
						}
					]
				},
				{
					"include": "#variable-display"
				},
				{
					"name": "string.interpolated",
					"match": "\\|"
				}
			]
		},
		"expression": {
			"comment": "Any portion of the file that contains, in effect, code",
			"patterns": [
				{
					"include": "#function"
				},
				{
					"include": "#variable-substitution"
				},
				{
					"include": "#string"
				},
				{
					"include": "#operator"
				},
				{
					"include": "#literal"
				},
				{
					"include": "#number"
				},
				{
					"include": "#variable-name"
				}
			]
		},
		"operator": {
			"match": "(!?=|>=?|<=?|%)|(\\*|\\+|-|/|%+|%-)|(&)|(and|or)",
			"captures": {
				"1": {
					"name": "keyword.operator.comparison.cs"
				},
				"2": {
					"name": "keyword.operator.arithmetic.cs"
				},
				"3": {
					"name": "keyword.operator.string.cs"
				},
				"4": {
					"name": "keyword.operator.logical.cs"
				}
			}
		},
		"function": {
			"name": "entity.name.function.cs",
			"match": "(not|round|timestamp|log|length|auto)"
		},
		"literal": {
			"name": "constant.language.cs",
			"match": "true|false"
		},
		"variable-name": {
			"name": "variable.other",
			"match": "[A-Za-z]\\w*"
		},
		"number": {
			"name": "constant.numeric",
			"match": "\\b\\d+\\b"
		},
		"string": {
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"include": "#variable-display"
				}
			]
		},
		"todo": {
			"patterns": [{
				"name": "invalid.illegal.cs",
				"match": "todo|TODO"
			}]
		},
		"markup": {
			"patterns": [
				{
					"include": "#italics"
				},
				{
					"include": "#bold"
				}
			]
		},
		"italics": {
			"begin": "\\[i\\]",
			"end": "\\[/i\\]",
			"contentName": "markup.italic"
		},
		"bold": {
			"begin": "\\[b\\]",
			"end": "\\[/b\\]",
			"contentName": "markup.bold"
		}
	},
	"scopeName": "source.cs"
}